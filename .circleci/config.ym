version: 2.1
jobs:
  build:
    docker:
      - image: cimg/python:3.8
    steps:
      - checkout
      - setup_remote_docker
      - run:
          name: Build Docker image
          command: docker build -t my-python-app .
      - run:
          name: Save Docker image
          command: docker save -o my-python-app.tar my-python-app
      - persist_to_workspace:
          root: .
          paths:
            - my-python-app.tar
